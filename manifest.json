{
    "name": "Remind Me Every...",
    "version": "0.3",
    "manifest_version": 3,
    "description": "Periodically remind yourself to get to work",
    "homepage_url": "https://github.com/meandthewallaby/RemindMeEvery",
    "icons": {
	"48": "icon48.png",
	"128": "icon128.png"
    },
    "browser_action": {
	"default_title": "Toggle Remind Me Every...",
	"default_icon": "icon48off.png"
    },
    "background": { "scripts": ["background.js"] },
    "options_page": "options.html",
    "permissions": [
	"notifications"
    ],
    "web_accessible_resources": ["icon48.png"]
}
